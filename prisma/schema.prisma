generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid      String   @id @default(cuid())
  email    String   @unique
  name     String?

}

model Image {
  id        Int      @id 
  url       String   // URL of the image in Supabase Storage
  createdAt DateTime @default(now())
}

model message {
  id        Int      @id @default(autoincrement())
  userId    String
  content   String
  createdAt DateTime @default(now())

  @@index([userId])
}